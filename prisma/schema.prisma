generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AppType {
  public
  confidential
}

model apps {
  id            String   @id(map: "app_pkey") @default(cuid())
  created_at    DateTime @default(now()) @db.Timestamptz(6)
  name          String
  type          AppType  @default(public)
  client_id     String   @unique
  client_secret String   @unique
  redirect_uris String[]
  scope         String[]
  owner         String
  users         users    @relation(fields: [owner], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model users {
  id         String   @id(map: "user_pkey") @default(cuid())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  email      String   @unique
  apps       apps[]
}
